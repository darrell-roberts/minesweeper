{
  "build": {
    "beforeBuildCommand": "cd vite-minesweeper && npm run build",
    "beforeDevCommand": "cd vite-minesweeper && npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../vite-minesweeper/dist"
  },
  "package": {
    "productName": "Minesweeper",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": true
      },
      "fs": {
        "scope": ["$HOME/.local/share/minesweeper"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Game",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": ["icons/minesweeper_32x32.png", "icons/minesweeper_128x128.png"],
      "identifier": "com.dr.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 840,
        "resizable": true,
        "title": "Minesweeper"
      }
    ]
  }
}
